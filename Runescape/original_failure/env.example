# Database Configuration
DATABASE_URL=postgresql://runescape_user:runescape_password@postgres:5432/runescape_bot
POSTGRES_DB=runescape_bot
POSTGRES_USER=runescape_user
POSTGRES_PASSWORD=runescape_password

# Redis Configuration
REDIS_URL=redis://redis:6379

# Bot Configuration
BOT_ENV=development
BOT_NAME=YourBotName
BOT_VERSION=1.0.0

# Runescape Client Settings
RS_CLIENT_PATH=/app/runescape
RS_SCREENSHOT_PATH=/app/screenshots
RS_LOG_PATH=/app/logs

# Security Settings
SECRET_KEY=your-secret-key-here
ENCRYPTION_KEY=your-encryption-key-here

# API Settings
API_HOST=0.0.0.0
API_PORT=8080
WEB_PORT=3000

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/bot.log

# Optional: External Services
DISCORD_WEBHOOK_URL=
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
