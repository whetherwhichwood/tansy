// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  items        Item[]
  tasks        MaintenanceTask[]
  documents    Document[]

  @@map("users")
}

model Item {
  id              String    @id @default(cuid())
  userId          String
  name            String
  category        String    // "APPLIANCE", "ELECTRONICS", "HOME_GOODS", "TOOLS", "FURNITURE", "OTHER"
  purchaseDate    DateTime
  warrantyEndDate DateTime?
  purchasePrice   Float?
  vendor          String?
  notes           String?
  receiptUrl      String?   // Path to uploaded receipt image
  status          String    // "ACTIVE", "EXPIRING_SOON", "EXPIRED"
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, status])
  @@index([warrantyEndDate])
  @@map("items")
}

model MaintenanceTask {
  id              String    @id @default(cuid())
  userId          String
  name            String
  description     String?
  category        String    // "HVAC", "PLUMBING", "ELECTRICAL", "YARD", "GENERAL", "CUSTOM"
  frequency       String    // "MONTHLY", "QUARTERLY", "SEMI_ANNUAL", "ANNUAL", "CUSTOM"
  customInterval  Int?      // Days between occurrences if CUSTOM
  nextDueDate     DateTime
  lastCompletedAt DateTime?
  isActive        Boolean   @default(true)
  reminderDays    Int       @default(7)  // Remind X days before due
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, isActive])
  @@index([nextDueDate])
  @@map("maintenance_tasks")
}

model Document {
  id             String    @id @default(cuid())
  userId         String
  name           String
  type           String    // "DRIVERS_LICENSE", "PASSPORT", "CAR_REGISTRATION", "INSURANCE", "PROFESSIONAL_LICENSE", "SUBSCRIPTION", "OTHER"
  issuer         String?
  documentNumber String?
  issueDate      DateTime?
  expirationDate DateTime
  fileUrl        String?   // Path to uploaded document
  notes          String?
  reminderDays   Int       @default(30)  // Remind X days before expiration
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expirationDate])
  @@map("documents")
}
